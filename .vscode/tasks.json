{
    // See https://code.visualstudio.com/docs/editor/tasks for more information
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Zealphp up",
            "type": "shell",
            "command": "docker-compose up --build -d",
            "presentation": {
                "close": true
            },
            "problemMatcher": []
        },
        {
            "label": "Zealphp down",
            "type": "shell",
            "command": "docker-compose down",
            "presentation": {
                "close": true
            },
            "problemMatcher": []
        },
        {
            "label": "Zealphp-app logs",
            "type": "shell",
            "command": "docker logs -f zealphp-app",
            "presentation": {
                "close": true,
                "panel": "new", // Ensures a new panel is created if the group doesn't exist
                "group": "myTerminalGroup" // Shared group for split terminals
            },
            "problemMatcher": []
        },
        {
            "label": "Zealphp-app-ws logs",
            "type": "shell",
            "command": "docker logs -f zealphp-app-ws",
            "presentation": {
                "close": true,
                "panel": "new", // Ensures a new panel is created if the group doesn't exist
                "group": "myTerminalGroup" // Shared group for split terminals
            },
            "problemMatcher": []
        },
        {
            "label": "Zealphp-db logs",
            "type": "shell",
            "command": "docker logs -f zealphp-db",
            "presentation": {
                "close": true,
                "panel": "new", // Ensures a new panel is created if the group doesn't exist
                "group": "myTerminalGroup" // Shared group for split terminals
            },
            "problemMatcher": []
        },
        {
            "label": "Zealphp restart All",
            "type": "shell",
            "command": "docker-compose restart",
            "presentation": {
                "close": true
            },
            "problemMatcher": []
        },
        {
            "label": "Zealphp restart App",
            "type": "shell",
            "command": "docker-compose restart app",
            "presentation": {
                "close": true
            },
            "problemMatcher": []
        },
        {
            "label": "Zealphp restart WS",
            "type": "shell",
            "command": "docker-compose restart websocket",
            "presentation": {
                "close": true
            },
            "problemMatcher": []
        },
        {
            "label": "Run All Docker Logs", // The compound task
            "dependsOn": [
                "Zealphp-app logs",
                "Zealphp-app-ws logs"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Zealphp-app",
            "type": "shell",
            "command": "docker exec -it zealphp-app /bin/bash",
            "presentation": {
                "close": true
            },
            "problemMatcher": []
        },
        {
            "label": "Zealphp-app WS",
            "type": "shell",
            "command": "docker exec -it zealphp-app-ws /bin/bash",
            "presentation": {
                "close": true
            },
            "problemMatcher": []
        }
    ]
}